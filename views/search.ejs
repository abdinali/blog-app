<div class="author">
    <h1 class="author__heading">Search Results</h1>
</div>

<section class="articles">
    <ul class="article-ul">
        <% for( let post of posts ) { %>
            <li>
                <a href="/posts/<%= post._id %>">
                    <span><%= post.title %></span>
                    <span class="article-list__date"><%= post.createdAt.toLocaleDateString() %></span>
                </a>
            </li>
        <% } %>
    </ul>
    <% if (posts.length == 0) { %>
        <p>No posts found</p>
    <% } %>
</section>